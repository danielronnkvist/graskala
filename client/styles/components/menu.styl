.menu
  @keyframes { open }
    from
      transform scale(1, 0)
      margin-top 0
      height 0
    to
      transform scale(1, 1)
      margin-top 10px
      height 30px

  animation open 0.2s forwards
  transform-origin top

  span
    float right
    margin-right 50px
    cursor pointer

    &:first-child
      margin-right 15px
